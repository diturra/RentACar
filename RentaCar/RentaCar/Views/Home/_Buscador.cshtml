@model IEnumerable<RentaCar.Datos.Categoria>
<style>
    #sidebar .heading {
        padding: 5px;
        border-bottom: 3px double #333333;
    }

    #sidebar .box {
        margin-bottom: 20px;
    }

    .wrap-col {
        margin: 10px;
    }

    #sidebar .content {
        padding: 15px;
    }

        #sidebar .content ul {
            font-size: 14px;
            list-style-type: circle;
            margin-left: 20px;
        }


    ol, ul {
        list-style: none;
    }

    #sidebar .content ul li {
        border-bottom: 1px solid #E1E1E1;
        padding: 5px;
    }
</style>
<div class="col-md-2">
    <div class="wrap-col">
        <div class="box">
            <div class="heading"><h2>Categoria</h2></div>
            <div class="content">
                <ul>
                    @foreach (var item in Model)
                    {
                        <li><a href="@Url.Action("Home","Home", new { id = item.id })">@item.nombre</a></li>
                    }
                </ul>
            </div>
        </div>
        <div class="box">
            <div class="heading"><h2>Categories</h2></div>
            <div class="content">
                <ul>
                    <li><a href="">Category 1</a></li>
                    <li><a href="">Category 2</a></li>
                    <li><a href="">Category 3</a></li>
                    <li><a href="">Category 4</a></li>
                    <li><a href="">Category 5</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
